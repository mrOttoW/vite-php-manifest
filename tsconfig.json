{
  "compilerOptions": {
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "lib": ["ESNext"],
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./node_modules/pkg-types", "./types"]
  },
  "include": ["src/index.ts"]
}
